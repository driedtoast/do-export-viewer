<Window title="Do Desktop" maximized="true"
    xmlns:bxml="http://pivot.apache.org/bxml"
    xmlns:content="org.apache.pivot.wtk.content"
    xmlns="org.apache.pivot.wtk">
    <content>
      <SplitPane orientation="horizontal" splitRatio="0.2">
      	<left>
      		<Border bxml:id="sidebar" styleName="nonBorderFilled" />
        </left>
        <right>
         	<Border bxml:id="body" styleName="nonBorder" />
       	</right>
      </SplitPane>
    </content>
</Window>